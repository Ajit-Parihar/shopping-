         <div style="display: flex; align-items: center; gap: 10px;">
            <%=puts "cart #{cart.inspect}"%>
            <%=puts "data #{cart[:quantity]}"%>
              <button class="decrease-btn" data-id="<%=cart[:product].id%>">➖</button>
              <span id="quantity-<%=cart[:product].id%>"><%=cart[:quantity]%></span>
              <button class="increase-btn" data-id="<%=cart[:product].id%>">➕</button>
            </div>
            <div style="margin-top: 8px;">
               Total: ₹<span id="total-pay-<%= cart[:product].id %>" data-price="<%= cart[:product].price %>"><%= cart[:quantity]*cart[:product].price %></span>
         </div>
