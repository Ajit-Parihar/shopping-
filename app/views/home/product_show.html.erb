      <div class="product-card">
        <%= link_to product_show_path(@product), class: "product-card-link" do %>
        <% if @product.image.attached? %>
          <%= image_tag url_for(@product.image), alt: @product.name %>
        <% else %>
          <p>No image available</p>
        <% end %>
         <% end %> 


        <h2><%= @product.name %></h2>
        <p><strong>Brand:</strong> <%= @product.brand_name %></p>
        <p><strong>Price:</strong> ₹<%= @product.price %></p>
        <p><strong>Description:</strong> <%= @product.discription %></p>
        <p><strong>Rating:</strong> <%= @product.rating %> ⭐</p>

     
        <div class="product-buttons">
          <%=link_to "Buy", admin_user_session_path%>
          <%=link_to "Add To Cart", addToCart_path(@product.id), method: :post %>
        </div>


      </div>
         

